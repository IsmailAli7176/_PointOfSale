@model IEnumerable<PointOfSale.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories Add</h1>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <script>
        alert("@successMessage");
    </script>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (!Model.Any())
{
    <div class=" alert alert-warning text-center">
            No Record Found

    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cat_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cat_Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cat_Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cat_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cat_Description)
                    </td>
                    <td>
                        @(item.Cat_Status == 1 ? "Active" : "InActive")
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Cat_Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Cat_Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Cat_Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
