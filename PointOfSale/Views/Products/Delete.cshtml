@model PointOfSale.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>

<div class="form-group">
    <label><strong>Name:</strong></label>
    <p class="form-control-plaintext">@Model.Product_Name</p>
</div>

<div class="form-group">
    <label><strong>Price:</strong></label>
    <p class="form-control-plaintext">@Model.Product_Price</p>
</div>

<div class="form-group">
    <label><strong>Quantity:</strong></label>
    <p class="form-control-plaintext">@Model.Product_Quantity</p>
</div>

<div class="form-group">
    <label><strong>Total Price:</strong></label>
    <p class="form-control-plaintext">@Model.Product_Total_Price</p>
</div>

<div class="form-group">
    <label><strong>Selling Price:</strong></label>
    <p class="form-control-plaintext">@Model.Product_Seling_Price</p>
</div>

<div class="form-group">
    <label><strong>Category:</strong></label>
    <p class="form-control-plaintext">@Model.Categories.Cat_Name</p>
</div>

<div class="form-group">
    <label><strong>Brand:</strong></label>
    <p class="form-control-plaintext">@Model.Brands.Brand_Name</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Product_Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
