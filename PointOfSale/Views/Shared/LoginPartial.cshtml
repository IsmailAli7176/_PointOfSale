@if (Context.User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="

" method="post" id="LogoutForm" class="navbar-right">
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
